<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane
        stylesheets="/ucf/assignments/gui/index/Index.css"
        xmlns="http://javafx.com/javafx/16"
        xmlns:fx="http://javafx.com/fxml/1">
   <top>
    <MenuBar BorderPane.alignment="CENTER">
      <menus>
        <Menu text="_File">
          <items>
            <MenuItem text="_New">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            <MenuItem text="_Open…">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            <Menu text="Op_en Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem text="_Close">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="W" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            <MenuItem text="_Save">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            <MenuItem text="Save _As…">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                     </accelerator></MenuItem>
            <MenuItem text="_Revert to saved">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem text="_Quit">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="F4" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="_Edit">
          <items>
            <MenuItem mnemonicParsing="true" text="_Delete selected">
					<accelerator>
                        <KeyCodeCombination alt="UP" code="DELETE" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
			</MenuItem>
            <MenuItem mnemonicParsing="true" text="_Edit selected">
					<accelerator>
                        <KeyCodeCombination alt="UP" code="ENTER" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
			</MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="true" text="_Search">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="D" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
          </items>
        </Menu>
        <Menu text="_Help">
          <items>
            <MenuItem mnemonicParsing="true" text="_About">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="F1" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
			</MenuItem>
          </items>
        </Menu>
      </menus>
    </MenuBar>
   </top>
   <center>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <children>
            <HBox maxWidth="1.7976931348623157E308" spacing="10.0">
               <children>
                  <TextField maxWidth="1.7976931348623157E308" promptText="Search by name or serial number" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <TableView maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="-1.0" text="Value" />
                <TableColumn prefWidth="-1.0" text="Serial Number" />
                  <TableColumn prefWidth="-1.0" text="Name" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="footer" BorderPane.alignment="CENTER">
         <children>
            <Button minWidth="-Infinity" mnemonicParsing="false" text="Add" />
            <HBox alignment="CENTER" styleClass="add" HBox.hgrow="ALWAYS">
               <children>
                  <Label minWidth="0.0" text="Value" />
                  <TextField maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefColumnCount="6" promptText="Value" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER" styleClass="add" HBox.hgrow="ALWAYS">
               <children>
                  <Label minWidth="0.0" text="Serial Number" />
                  <TextField maxWidth="1.7976931348623157E308" minWidth="-Infinity" promptText="Serial Number" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER" styleClass="add" HBox.hgrow="ALWAYS">
               <children>
                  <Label minWidth="0.0" text="Name" />
                  <TextField maxWidth="1.7976931348623157E308" minWidth="-Infinity" promptText="Name" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
